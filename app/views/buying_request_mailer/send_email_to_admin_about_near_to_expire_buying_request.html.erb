<% if @system_email.present? && @system_email.try(:content).present? %>
	<%= @system_email.content.to_s.gsub("::ADMIN_USERNAME::",@admin_user.name.to_s).gsub("::REQUESTER_NAME::",@buying_request.name.to_s).gsub("::REQUESTER_EMAIL::",@buying_request.email.to_s).gsub("::BUYING_REQUEST_NAME::",@buying_request.title.to_s).gsub("::REQUESTER_COUNTRY::",@buying_request.country.try(:name).to_s).gsub("::DATE_OF_EXPIERY::",format_date(@buying_request.expiration_date)).html_safe %>
<% else %>
	<p>HELLO <strong><%= @admin_user.name.to_s %></strong></p>

	<p><strong><%= @buying_request.title.to_s %></strong> will expire on <strong><%= format_date(@buying_request.expiration_date) %></strong>, please try to submit proposal before expiry date.</p>

	<p>Name: <strong><%= @buying_request.name.to_s %></strong></p>

	<p>E-mail: <strong><%= @buying_request.email.to_s %></strong></p>

	<p>Country: <strong><%= @buying_request.country.try(:name).to_s %></strong></p>

	<p>Buying request name:&nbsp;<strong><%= @buying_request.title.to_s %></strong></p>

	<p>Expiration date: <strong><%= format_date(@buying_request.expiration_date) %></strong></p>

	<p>&nbsp;</p>

	<p>Best Regards</p>

	<p>Power Cozmo Team</p>
<% end %>
