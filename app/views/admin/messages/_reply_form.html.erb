<% if @receipt.present? && message.present? && conversation.present?  %>
  <%= semantic_form_for [:admin, Mailboxer::Message.new], url: reply_admin_message_path(conversation), method: :post, multipart: true, html: {id: 'reply_mailboxer_message'} do |f| %>    
    <%= hidden_field_tag :message_id, message.id %>  
    <%= f.inputs "Reply Message" do %>
      <li>            
        <label>Message<abbr title="required">*</abbr></label>
        <%= f.bootsy_area :body, :rows => 15, :cols => 100, editor_options: { image: false, html: true } %>
      </li>
      <%= f.input :attachment, as: :file %>
    <% end %>    
    <%= f.actions do %>       
      <%= f.action :submit, :label => "Reply" %>
      <li class='cancel'>
          <%= link_to 'Cancel', {:action => "index"} %>
      </li>
    <% end %>
  <% end %>
<% end %>