  <!-- Content Wrapper. Contains page content -->

  <div class="content-wrapper"> 
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>Request More Information </h1>
      <ol class="breadcrumb">
        <li><a href="<%= seller_dashboard_path %>">Home</a></li>
        <li class="active">Request More Information</li>
      </ol>
    </section>
    
    <!-- Main content -->
    <section class="content new-msg-content">
      <%= form_for @request_for_more_info, url: seller_send_request_for_more_info_path do |f|%>
        <!-- /.row -->
        <div class="row">
          <div class="col-lg-12 msg-info-area">
            <div class="new-msg-form-box">
              <div class="form-group">
                <label for="mailto">To* :</label>
                <!-- Note: Remove below code and fill these 3 hidden fields data in controller side -->
                <%= f.hidden_field :status, value: 'New'%>
                <%= f.hidden_field :user_id, value: current_user.id%>
                <%= f.hidden_field :buying_request_id, value: @buying_request.id%>
                <%= f.text_field :receiver, value: "info@powercozmo.com", class: 'form-control mailto-row', id: 'mailto', readonly: true %>
              </div>
              <div class="form-group">
                <label for="subject">Subject* :</label>
                <%= f.text_field :subject, value: @buying_request.title, class: 'form-control mailto-row', id: 'subject', readonly: true %>
              </div>
              <div class="form-group">
                <label for="message">Message* : </label>
                <%= f.bootsy_area :message, class: 'form-control', id: 'message', placeholder: 'Enter Message', editor_options: { html: true } %>
                <%= error_message(@request_for_more_info, :message)%>
              </div>
              <div class="form-group">
                <a href="javascript:void(0)">
                <button type="button" class="btn btn-default attch-btn" id="attach-btn"><i class="fa fa-paperclip"></i> Attachment</button>
                  <%= f.file_field :attachment , style: "display:none;", id: "hidden-attach"%>
                </a>
                <span class="max-limit">Max.32MB</span> </div>
              <div class="form-group">
                <button type="submit" class="btn btn-default custom-btn sent-mail-btn">Send</button>
                <a href="<%= seller_buying_requests_path%>" class="btn btn-default custom-btn">Back</a>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <!-- /.row --> 
    </section>
    <!-- /.content --> 
  </div>
  <!-- /.content-wrapper -->

<script type="text/javascript">
  $( "#attach-btn" ).on( "click", function() {
    $('#hidden-attach').click();
  });
</script>