<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1> Dashboard </h1>
    <ol class="breadcrumb">
      <li><a href="#">Home</a></li>
      <li class="active">Dashboard</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="row">
      <div class="col-md-3 col-sm-6 col-xs-12 res-info">
        <div class="info-box">
        	<span class="info-box-icon bg-aqua"><div class="info-count" title=<%= @equipments.count%>><%= (@equipments.count >= 9999) ? "9999" : @equipments.count %></div><i class="fa fa-list"></i> <span class="view-listing">View Listing</span><%= link_to "View Details", seller_equipment_index_path, class: "view-details" %></span>
        </div>
        <!-- /.info-box -->
      </div>
      <!-- /.col -->
      <div class="col-md-3 col-sm-6 col-xs-12 res-info">
        <div class="info-box"> <span class="info-box-icon bg-green"><div class="info-count" title=<%= @buying_requests.count%>><%= (@buying_requests.count >= 9999) ? "9999" : @buying_requests.count %></div> <i class="fa fa-list-alt"></i> <span class="view-listing">Buying Requests</span> <a href="<%=seller_buying_requests_path%>" class="view-details">View Details</a></span>
        </div>
        <!-- /.info-box -->
      </div>
      <!-- /.col -->

      <!-- fix for small devices only -->
      <div class="clearfix visible-sm-block"></div>
      <div class="col-md-3 col-sm-6 col-xs-12 res-info">
        <div class="info-box"> <span class="info-box-icon bg-yellow"><div class="info-count" title=<%= @received_messages.count%>><%= (@received_messages.count >= 9999) ? "9999" : @received_messages.count %></div> <i class="fa fa-envelope"></i> <span class="view-listing">Received Messages</span><%= link_to "View Details", inbox_seller_messages_path, class: "view-details" %></span>
        </div>
        <!-- /.info-box -->
      </div>
      <!-- /.col -->
      <div class="col-md-3 col-sm-6 col-xs-12 res-info">
        <div class="info-box"> <span class="info-box-icon bg-red"><div class="info-count" title=<%= @offers.count%>><%= (@offers.count >= 9999) ? "9999" : @offers.count %></div><i class="fa fa-tag"></i> <span class="view-listing">Offers</span><%= link_to "View Details", seller_offers_path, class: "view-details" %> </span>
        </div>
        <!-- /.info-box -->
      </div>
      <!-- /.col -->
    </div>

    <div class="row">
      <div class="col-md-3 col-sm-6 col-xs-12 res-info">
        <div class="info-box"> <span class="info-box-icon bg-red"> <i class="fa fa-plus-circle"></i> <span class="view-listing">Add Listing</span> <%= link_to "Add", new_seller_equipment_path, class: "view-details" %>  </span>
        </div>
        <!-- /.info-box -->
      </div>
      <!-- /.col -->
      <div class="col-md-3 col-sm-6 col-xs-12 res-info">
        <div class="info-box"> <span class="info-box-icon bg-aqua"><div class="info-count" title=<%= @proposals.count%>><%= (@proposals.count >= 9999) ? "9999" : @proposals.count %></div><i class="fa fa-file-text-o"></i> <span class="view-listing">My Proposals</span> <%= link_to "View Details", seller_buying_proposals_path, class: "view-details" %> </span>
        </div>
        <!-- /.info-box -->
      </div>
      <!-- /.col -->

      <!-- fix for small devices only -->
      <div class="clearfix visible-sm-block"></div>
      <div class="col-md-3 col-sm-6 col-xs-12 res-info">
        <div class="info-box"> <span class="info-box-icon bg-green"><i class="fa fa-send"></i> <span class="view-listing">Sent Messages</span> <%= link_to "View Details", sentbox_seller_messages_path, class: "view-details" %></a> </span>
        </div>
        <!-- /.info-box -->
      </div>
      <!-- /.col -->
      <div class="col-md-3 col-sm-6 col-xs-12 res-info">
        <div class="info-box"> <span class="info-box-icon bg-yellow"><div class="info-count" title=<%= @questions.count%>><%= (@questions.count >= 9999) ? "9999" : @questions.count %></div><i class="fa fa-question"></i> <span class="view-listing">Questions</span> <%= link_to "View Details", seller_questions_path, class: "view-details" %> </span>

        </div>
        <!-- /.info-box -->
      </div>
      <!-- /.col -->
    </div>

    <!-- Info boxes -->
    <!-- /.row -->

    <!-- Main row -->
    <div class="row">
      <!-- Left col -->
      <div class="col-md-12">
        <!-- MAP & BOX PANE -->

        <!-- /.box -->

        <!-- /.row -->

        <!-- TABLE: LATEST ORDERS -->
        <div class="box box-info dsh-table-details">
          <div class="box-header">
            <h3 class="box-title">Listing Performance</h3>
            <div class="box-tools pull-right">
              <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i> </button>
              <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
            </div>
          </div>
          <!-- /.box-header -->
          <div class="box-body">
            <div class="table-responsive">
              <table class="table no-margin">
                <thead>
                  <tr>
                    <th width="12%">S.No.</th>
                    <th width="20%">Name</th>
                    <th width="30%">Description</th>
                    <th width="10%" style="text-align:center;">Image</th>
                    <th width="10%">Valid Till</th>
                    <th width="10%">Status</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% if @equipments.present? %>
                    <% @equipments.each_with_index do |equipment,index| %>
                      <tr>
                        <td><%= equipment.identifier %></td>
                        <td><%= equipment.name %></td>
                        <td><%=truncate(equipment.description, :length => 50) %></td>
                        <td align="center">
                          <% if equipment.images.present? %>
                            <%= image_tag(equipment.images.first.try(:image), width: '32', height: '32', alt: '') %>
                          <% else %>
                            <i class="fa fa-file-image-o"></i>
                          <% end %>
                        </td>
                        <td><%= equipment.availble_for.strftime("%d-%b-%Y %H:%M %p") if equipment.availble_for.present? %></td>
                        <td><span class="label label-<%= ['closed','sold','inactive'].include?(equipment.status.to_s) ? 'deactive' : 'active' %>"><%= equipment.status.humanize %></span></td>
                        <td>
                          <%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_seller_equipment_path(equipment) %>
                          <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, seller_equipment_path(equipment),method: :delete,data: { confirm: 'Are you sure?' } %>
                        </td>
                      </tr>
                    <% end %>
                  <% else %>
                    <tr>
                      <td colspan="6" align="center">No Result Found</td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <!-- /.table-responsive -->
          <%= paginate @equipments, :theme => 'listing_page_theme' %>
          </div>
          <!-- /.box-body -->

          <!-- /.box-footer -->
        </div>
        <!-- /.box -->
      </div>
      <!-- /.col -->

      <!-- /.col -->
    </div>
    <!-- /.row -->
  </section>
  <!-- /.content -->
</div>
