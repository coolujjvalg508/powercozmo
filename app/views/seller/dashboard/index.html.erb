<!-- dashboard page -->
<div class="page page-dashboard">

	<div class="page-wrap">

		<div class="row">
			<!-- dashboard header -->
			<div class="col-md-12">
				<div class="dash-head clearfix mt15 mb20">
					<div class="left">
						<h4 class="mb5 text-light">Welcome to Power Cozmo</h4>
					</div>
				</div>
			</div>
		</div> <!-- #end row -->

		<!-- mini boxes -->
		<div class="row">
			<div class="col-md-3 col-sm-6">
				<div class="panel panel-default mb20 mini-box panel-hovered">
					<div class="panel-body">
						<div class="clearfix">
							<div class="info left">
								<h4 class="mt0 text-primary text-bold" title=<%= @equipments.count%>>
									<%= (@equipments.count > 9999) ? "9999+" : @equipments.count %>
								</h4>
								<h5 class="text-light mb0">My Equipments</h5>
							</div>
							<div class="right ion ion-navicon-round icon"></div>
						</div>
					</div>
					<div class="panel-footer clearfix panel-footer-sm panel-footer-primary">
						<p class="mt0 mb0 left"><%= link_to "View Details", seller_equipment_index_path, class: "text-white" %></p>
					</div>
				</div>
			</div>
        
			<div class="col-md-3 col-sm-6">
				<div class="panel panel-default mb20 mini-box panel-hovered">
					<div class="panel-body">
						<div class="clearfix">
							<div class="info left">
								<h4 class="mt0 text-success text-bold" title=<%= @buying_requests.count%>>
									<%= (@buying_requests.count > 9999) ? "9999+" : @buying_requests.count %>
								</h4>
								<h5 class="text-light mb0">Buying Requests</h5>
							</div>
							<div class="right ion ion-clipboard icon"></div>
						</div>
					</div>
					<div class="panel-footer clearfix panel-footer-sm panel-footer-success">
						<p class="mt0 mb0 left"><a href="<%=seller_buying_requests_path%>" class="text-white">View Details</a></p>
					</div>
				</div>
			</div>
			      
			<div class="col-md-3 col-sm-6">
				<div class="panel panel-default mb20 mini-box panel-hovered">
					<div class="panel-body">
						<div class="clearfix">
							<div class="info left">
								<h4 class="mt0 text-info text-bold" title=<%= @received_messages.count%>>
									<%= (@received_messages.count > 9999) ? "9999+" : @received_messages.count %>
								</h4>
								<h5 class="text-light mb0">Received Messages</h5>
							</div>
							<div class="right ion ion-email icon"></div>
						</div>
					</div>
					<div class="panel-footer clearfix panel-footer-sm panel-footer-info">
						<p class="mt0 mb0 left"><%= link_to "View Details", inbox_seller_messages_path, class: "text-white" %></p>
					</div>
				</div>
			</div>
			
			<div class="col-md-3 col-sm-6">
				<div class="panel panel-default mb20 mini-box panel-hovered">
					<div class="panel-body">
						<div class="clearfix">
							<div class="info left">
								<h4 class="mt0 text-pink text-bold"></h4>
								<h5 class="text-light mb0">Sent Messages</h5>
							</div>
							<div class="right ion ion-ios-paperplane icon"></div>
						</div>
					</div>
					<div class="panel-footer clearfix panel-footer-sm panel-footer-pink">
						<p class="mt0 mb0 left"><%= link_to "View Details", sentbox_seller_messages_path, class: "text-white" %></p>
					</div>
				</div>
			</div>
			
			<div class="col-md-3 col-sm-6">
				<div class="panel panel-default mb20 mini-box panel-hovered">
					<div class="panel-body">
						<div class="clearfix">
							<div class="info left">
								<h4 class="mt0 text-primary text-bold"></h4>
								<h5 class="text-light mb0">Add Listing</h5>
							</div>
							<div class="right ion ion-plus-circled icon"></div>
						</div>
					</div>
					<div class="panel-footer clearfix panel-footer-sm panel-footer-primary">
						<p class="mt0 mb0 left"><%= link_to "Add", new_seller_equipment_path, class: "text-white" %></p>
					</div>
				</div>
			</div>
			
			<div class="col-md-3 col-sm-6">
				<div class="panel panel-default mb20 mini-box panel-hovered">
					<div class="panel-body">
						<div class="clearfix">
							<div class="info left">
								<h4 class="mt0 text-success text-bold" title=<%= @proposals.count%>>
									<%= (@proposals.count > 9999) ? "9999+" : @proposals.count %>
								</h4>
								<h5 class="text-light mb0">My Proposals</h5>
							</div>
							<div class="right ion ion-ios-book icon"></div>
						</div>
					</div>
					<div class="panel-footer clearfix panel-footer-sm panel-footer-success">
						<p class="mt0 mb0 left"><%= link_to "View Details", seller_buying_proposals_path, class: "text-white" %></p>
					</div>
				</div>
			</div>
			
			<div class="col-md-3 col-sm-6">
				<div class="panel panel-default mb20 mini-box panel-hovered">
					<div class="panel-body">
						<div class="clearfix">
							<div class="info left">
								<h4 class="mt0 text-info text-bold" title=<%= @offers.count%>>
									<%= (@offers.count > 9999) ? "9999+" : @offers.count %>
								</h4>
								<h5 class="text-light mb0">Offers</h5>
							</div>
							<div class="right ion ion-pricetags icon"></div>
						</div>
					</div>
					<div class="panel-footer clearfix panel-footer-sm panel-footer-info">
						<p class="mt0 mb0 left"><%= link_to "View Details", seller_offers_path, class: "text-white" %></p>
					</div>
				</div>
			</div>
			
			<div class="col-md-3 col-sm-6">
				<div class="panel panel-default mb20 mini-box panel-hovered">
					<div class="panel-body">
						<div class="clearfix">
							<div class="info left">
								<h4 class="mt0 text-pink text-bold" title=<%= @questions.count%>>
									<%= (@questions.count > 9999) ? "9999+" : @questions.count %>
								</h4>
								<h5 class="text-light mb0">Questions</h5>
							</div>
							<div class="right ion ion-help-circled icon"></div>
						</div>
					</div>
					<div class="panel-footer clearfix panel-footer-sm panel-footer-pink">
						<p class="mt0 mb0 left"><%= link_to "View Details", seller_questions_path, class: "text-white" %></p>
					</div>
				</div>
			</div>
						
			<!-- #end mini boxes -->
		</div> <!-- #end row -->
		
		
		<!-- row -->
		<div class="row">

			<!-- profile -->
			<div class="col-md-4 col-sm-6">
				<div class="panel panel-default mb20 panel-hovered profile-widget">
					<div class="panel-body">
						<div class="clearfix">
							<div class="left-side">
								<h3 class="text-light mt0"><%= current_user.name.to_s.titleize %></h3>
								<p><strong>Email:&nbsp;</strong><%= current_user.email %></p>
								<p><strong>Company:&nbsp;</strong><%= current_user.profile.company_name.to_s.titleize %></p>
								<p><strong>Website:&nbsp;</strong><%= current_user.profile.website %></p>
								<p><strong>Mobile:&nbsp;</strong><%= current_user.profile.phone_number %></p>
								<p><strong>Country:&nbsp;</strong><%= current_user.profile.country.name %></p>
								<p>
									<strong>I am: </strong>
									<% if current_user.user_type == 'Seller' || current_user.user_type == 'Both' %>
										<label class="label label-pink">Seller</label>
									<% end %>
									<% if current_user.user_type == 'Buyer' || current_user.user_type == 'Both' %>
										<label class="label label-pink">Buyer</label>
									<% end %>
									
								</p>
							</div>
							<div class="right-side">
								<% if (current_user.image.blank? || current_user.image.try(:image).blank?)%>
									<img src="/assets/seller/myprofile-placeholder-img.png" alt="User">
								<% else %>
									<%= image_tag(current_user.image.try(:image).try(:thumb).try(:url), alt: "User Image") %>
								<% end %>
							</div>
						</div>
						
						<ul class="user-badges list-unstyled row">
							<li class="col-xs-12 col-md-12">
								<a href="<%= edit_seller_profile_path(current_user)%>" class="btn btn-primary btn-xs pull-right">Profile</a>
							</li>
						</ul>
					</div> <!-- #end panel-body -->
				</div>
			</div>

			<!-- list widgets -->
			<div class="col-md-4 col-sm-12">
				<div class="panel panel-default mb20 list-widget">
					<ul class="list-unstyled clearfix">
						<li>
							<i class="fa fa-file-o"></i>
							<span class="text">My Equipments</span>
							<span class="badge badge-xs badge-primary right"><%= (@equipments.count > 9999) ? "9999+" : @equipments.count %></span>
						</li>
						<li>
							<i class="fa fa-comments-o"></i>
							<span class="text">Messages</span>
							<span class="badge badge-xs badge-info right"><%= (@received_messages.count > 9999) ? "9999+" : @received_messages.count %></span>
						</li>
						<li>
							<i class="fa fa-building-o"></i>
							<span class="text">My Proposals</span>
							<span class="badge badge-xs badge-success right"><%= (@proposals.count > 9999) ? "9999+" : @proposals.count %></span>
						</li>
						<li>
							<i class="fa fa-bullhorn"></i>
							<span class="text"> Notifications</span>
							<span class="badge badge-xs badge-primary right">
								<% unread_notifications_count = current_user.try(:unread_notifications_count).to_i %>
								<%= (unread_notifications_count > 9999) ? "9999+" : unread_notifications_count %>
							</span>
						</li>
						<li>
							<i class="fa fa-tag"></i>
							<span class="text">Offers</span>
							<span class="badge badge-xs badge-danger right"><%= (@offers.count > 9999) ? "9999+" : @offers.count %></span>
						</li>
						<li>
							<i class="fa fa-question"></i>
							<span class="text">Questions</span>
							<span class="badge badge-xs badge-info circle right"><%= (@questions.count > 9999) ? "9999+" : @questions.count %></span>
						</li>
						<li>
							<i class="fa fa-suitcase"></i>
							<span class="text">My Orders</span>
							<span class="badge badge-xs circle badge-danger right"><%= (@orders.count > 9999) ? "9999+" : @orders.count %></span>
						</li>
					</ul>
				</div>
			</div>
			
			<!-- recent activities -->
			<div class="col-md-4">
				<div class="panel panel-default mb20 activities">
					<div class="panel-heading">Recent Offers</div>
					<div class="panel-body">
						<ul class="list-unstyled">
							
							<% if(@offers.count > 0) %>
							
								<% @offers.each_with_index do |offer, index| %>
									<% if index <= 3 %>
									
										<% list_class = 'primary' %>
										<% if index == 0 %>
											<% list_class = 'primary' %>
										<% elsif index == 1 %>
											<% list_class = 'success' %>
										<% elsif index == 2 %>
											<% list_class = 'info' %>
										<% elsif index == 3 %>
											<% list_class = 'warning' %>	
										<% end %>
										
										<li class="<%= list_class %>">
											<span class="point"></span>
											<span class="time small text-muted"><%= offer.created_at.strftime("%d-%b-%Y %H:%M %p") %></span>
											<p><%=link_to offer.equipment.name, seller_offer_path(offer), title: 'View', class: 'theme-text' %> <span class="time small text-muted">(Offered Price: <%= raw(offer.try(:equipment).try(:currency)) %><%= offer.bidding_price || offer.equipment.price %>)</span></p>
										</li>
									<% else 
										break
									%>
									<% end %>
								<% end %>
								
							<% else %>
								<li class="warning">
									<span class="point"></span>
									<p>Offers not available.</p>
								</li>
							<% end %>
							
						</ul>
					</div>
				</div>
			</div>
			<!-- #end recent activities -->
			
		</div>
		<!-- #end row -->

		
		<!-- row -->
		<div class="row">
			<!-- Basic Table -->
			<div class="col-md-12">
				<div class="panel panel-lined panel-hovered mb20 table-responsive basic-table">
					<div class="panel-heading">Listing Performance</div>
					<div class="panel-body">
						<% if @equipments.present? %>
							<table class="table">
								<thead>
									<tr>
										<th>S.No.</th>
										<th>Name</th>
										<th>Description</th>
										<th class="text-center">Image</th>
										<th>Valid Till</th>
										<th class="text-center">Status</th>
										<th class="text-center">Action</th>
									</tr>
								</thead>
								<tbody>
									<% @equipments.each_with_index do |equipment,index| %>
										<tr>
											<td><%= equipment.identifier %></td>
											<td><%= equipment.name %></td>
											<td><%=truncate(equipment.description, :length => 50) %></td>
											<td class="text-center">
												<% if equipment.images.present? %>
												  <%= image_tag(equipment.images.first.try(:image), width: '50', alt: equipment.name) %>
												<% else %>
												  <i class="fa fa-file-image-o"></i>
												<% end %>
											</td>
											<td><%= equipment.availble_for.strftime("%d-%b-%Y %H:%M %p") if equipment.availble_for.present? %></td>
											<td class="text-center">
												<label class="label label-<%= ['closed','sold','inactive'].include?(equipment.status.to_s) ? 'danger' : 'success' %>"><%= equipment.status.humanize %></label>
												
											</td>
											<td class="text-center">
												<%= link_to '<i class="ion-ios-compose"></i>'.html_safe, edit_seller_equipment_path(equipment), title: "Edit Equipment" %>
												<%= link_to '<i class="ion-ios-trash"></i>'.html_safe, seller_equipment_path(equipment),method: :delete,data: { confirm: 'Are you sure?' }, title: "Delete Equipment" %>
											</td>
										</tr>
									<% end %>
								</tbody>
							</table>
							<%= paginate @equipments, :theme => 'listing_page_theme' %>
						 <% else %>
							<p class="no-result">No Equipments Found</p>
						 <% end %>	
					</div>
				</div>
			</div>
		</div>
		
		


	</div> <!-- #end page-wrap -->
</div>
<!-- #end dashboard page -->
