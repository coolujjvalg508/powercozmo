<!-- dashboard page -->
<div class="page page-dashboard padding0">

	<div class="page-wrap clearfix">
	<div class="col-md-9 col-sm-12">
		<div class="row">
			<!-- dashboard header -->
			<div class="col-md-12">
				<div class="dash-head clearfix mt15 mb20">
					<div class="left">
						<h4 class="mb5 text-light">Welcome to Power Cozmo</h4>
					</div>
				</div>
			</div>
		</div> <!-- #end row -->
		<div class="row">
		<div class="col-md-12 col-sm-12">
		 <div class="panel panel-default mb20 mini-box panel-hovered">
					
					<div class="dashboard-tablenew panel-heading">To Do List</div>
					<div class="panel-body padding0">
						
						 <div class="owl-carousel" id="dash-slide">
			
							<div class="dashboar-slide-box text-center item"> 
								<a href="<%= inbox_seller_messages_path %>" title="<%= @received_messages.count %> Messages">
									<div class="dash-slide-count"><%= (@received_messages.count > 9999) ? "9999+" : @received_messages.count %> <%= image_tag "seller/dashboard/email-icon.png" %></div>
									<div class="dash-slide-title">Message Center</div>
								</a>
							</div>

							<% offer_question_count = @offers.count + @questions.count %>	

							<div class="dashboar-slide-box text-center item" title="<%= offer_question_count %> Offers & Questions"> 
								<div class="dash-slide-count"><%= (offer_question_count > 9999) ? "9999+" : offer_question_count %> <%= image_tag "seller/dashboard/offer-icon.png" %></div>
								<div class="dash-slide-title">Offers & Questions</div>
							</div>

							<div class="dashboar-slide-box text-center item"> 
								<a href="<%= seller_orders_path%>" title="<%= @orders.count %> Orders"> 
									<div class="dash-slide-count"><%= (@orders.count > 9999) ? "9999+" : @orders.count %> <%= image_tag "seller/dashboard/order-icon.png" %></div>
									<div class="dash-slide-title">Orders</div>
								</a>
							</div>

							<div class="dashboar-slide-box text-center item"> 
								<a href="<%=seller_buying_requests_path%>" title="<%= @buying_requests.count%> RFQ">
									<div class="dash-slide-count"><%= (@buying_requests.count > 9999) ? "9999+" : @buying_requests.count %> <%= image_tag "seller/dashboard/rfq-icon.png" %></div>
									<div class="dash-slide-title">RFQ</div>
								</a>
							</div>

							<div class="dashboar-slide-box text-center item">
								<a href="<%= seller_received_proposals_path %>" title="<%= @received_proposals.count %> Received Quotations"> 
									<div class="dash-slide-count"><%= (@received_proposals.count > 9999) ? "9999+" : @received_proposals.count %> <%= image_tag "seller/dashboard/order-icon.png" %></div>
									<div class="dash-slide-title">Received Quotations</div>
								</a>
							</div>		
		</div>
	</div>

</div>
</div>
</div>

<div class="row">
<div class="col-md-12 col-sm-12">
		 <div class="panel panel-default mb20 mini-box panel-hovered">
					
					<div class="dashboard-tablenew panel-heading">Start your online trade for power, oil & gas equipment with power Cozmo now!</div>
					<div class="panel-body">
				<div class="row">
					<div class="col-md-4 col-sm-4 col-xs-12 dashboard-search">
						<div class="form-search">
							<%= form_tag(seller_listing_filter_path, method: :get) do %>
								<input type="search" class="form-control" placeholder="Type here for search..." name="q" value="<%=params[:q]%>">
								<button type="submit" id="search-btn" class="ion ion-ios-search-strong"></button>
							<% end %>
						</div>
					</div>
					<div class="col-md-4 col-sm-4 col-xs-12 post-btn"><a href="<%= new_seller_equipment_path %>">Post your equipment</a></div>	
					<div class="col-md-4 col-sm-4 col-xs-12 post-btn"><a href="<%= new_buying_request_path %>">Post request for quotations</a></div>
				</div>		
	</div>
</div>
</div>
</div>

		
<script>
  $(document).ready(function() {
     
      var owl = $("#dash-slide");
     
      owl.owlCarousel({
         items : 4,
          itemsCustom : [
            [0, 1],
            [450, 1],
            [600, 2],
            [700, 3],
            [1000, 3],
            [1200, 4]
          ],
          navigation : true,
          autoPlay : true,
          dots: false
     
      });
     
    });


		</script>
		
		
		<!-- row -->
		<div class="row">
			<!-- Basic Table -->
			<div class="col-md-12">
				<div class="panel panel-default panel-hovered mb20 table-responsive basic-table">
					
				<div class="dashboard-tablenew panel-heading">My Listed Equipment </div>
					 
					<div class="panel-body padding0 dashboard-table">
						<% if @equipments.present? %>
							<table class="table">
								<thead>
									<tr>
										<th>Identifier</th>
										<th>Name</th>
										<th>Description</th>
										<th>Valid Till</th>
										<th class="text-center">Status</th>
										<th class="text-center">Action</th>
									</tr>
								</thead>
								<tbody>
									<% @equipments.each_with_index do |equipment,index| %>
										<tr>
											<td><%= equipment.identifier %></td>
											<td><%= equipment.name %></td>
											<td><%=truncate(equipment.description, :length => 50) %></td>
											<td><%= equipment.availble_for.strftime("%d-%b-%Y %H:%M %p") if equipment.availble_for.present? %></td>
											<td class="text-center">
												<label class="label label-<%= ['closed','sold','inactive'].include?(equipment.status.to_s) ? 'danger' : 'success' %>"><%= equipment.status.humanize %></label>
												
											</td>
											<td class="text-center">
												<%= link_to '<i class="fa fa-edit marginR5 bluecolor"></i>'.html_safe, edit_seller_equipment_path(equipment), title: "Edit Equipment" %>
												<%= link_to '<i class="fa fa-trash marginL5 redcolor"></i>'.html_safe, seller_equipment_path(equipment),method: :delete,data: { confirm: 'Are you sure?' }, title: "Delete Equipment" %>
											</td>
										</tr>
									<% end %>
								</tbody>
							</table>
						 <% else %>
							<p class="no-result">No Equipments Found</p>
						 <% end %>	
					</div>
				</div>
			</div>
		</div>


		<% if @my_buying_request_list.present? %>
			<!-- row -->
			<div class="row">
				<!-- Basic Table -->
				<div class="col-md-12">
					<div class="panel panel-default panel-hovered mb20 table-responsive basic-table">
						
					<div class="dashboard-tablenew panel-heading">My Requests For Quotations</div>
						 
						<div class="panel-body padding0 dashboard-table">
							<table class="table">
								<thead>
									<tr>
										<th>S.No.</th>
										<th>Title</th>
										<th>Description</th>
										<th>Valid Till</th>
										<th class="text-center">Action</th>
									</tr>
								</thead>
								<tbody>
									<% @my_buying_request_list.each_with_index do |br,index| %>
										<tr>
											<td><%= br.identifier%></td>
											<td><%= br.title%></td>
											<td><%= truncate(br.description, length: 35)%></td>
											<td><%= br.expiration_date.strftime('%m/%d/%Y')%></td>
											<td class="text-center">
												
												<%= link_to '<i class="fa fa-eye marginR5 bluecolor"></i>'.html_safe, seller_my_buying_request_path(br), title: "View"%>
												
												<%= link_to '<i class="fa fa-edit marginR5 bluecolor"></i>'.html_safe, edit_buying_request_path(br), title: "Edit" %>
												
												<%= link_to '<i class="fa fa-trash marginL5 redcolor"></i>'.html_safe, seller_buying_request_path(br),method: :delete,data: { confirm: 'Are you sure?' }, title: "Delete" %>
							
											</td>
										</tr>
									<% end %>
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		<% end %>
		
		
		
		<!-- row -->
		<div class="row">

			<!-- profile -->
			<div class="col-md-6 col-sm-6">
				<div class="panel panel-default mb20 panel-hovered profile-widget">
					<div class="panel-body">
						<div class="clearfix">
							<div class="left-side">
								<h3 class="text-light mt0"><%= current_user.name.to_s.titleize %></h3>
								<p><strong>Email:&nbsp;</strong><%= current_user.email %></p>
								<p><strong>Company:&nbsp;</strong><%= current_user.profile.company_name.to_s.titleize %></p>
								<p><strong>Website:&nbsp;</strong><%= current_user.profile.website %></p>
								<p><strong>Mobile:&nbsp;</strong><%= current_user.profile.phone_number %></p>
								<p><strong>Country:&nbsp;</strong><%= current_user.profile.country.name %></p>
								<p>
									<strong>I am: </strong>
									<% if current_user.user_type == 'Seller' || current_user.user_type == 'Both' %>
										<label class="label label-pink">Seller</label>
									<% end %>
									<% if current_user.user_type == 'Buyer' || current_user.user_type == 'Both' %>
										<label class="label label-pink">Buyer</label>
									<% end %>
									
								</p>
							</div>
							<div class="right-side">
								<% if (current_user.image.blank? || current_user.image.try(:image).blank?)%>
									<img src="/assets/seller/myprofile-placeholder-img.png" alt="User">
								<% else %>
									<%= image_tag(current_user.image.try(:image).try(:thumb).try(:url), alt: "User Image") %>
								<% end %>
							</div>
						</div>
						
						<ul class="user-badges list-unstyled row">
							<li class="col-xs-12 col-md-12">
								<a href="<%= edit_seller_profile_path(current_user)%>" class="btn btn-primary btn-xs pull-right">Profile</a>
							</li>
						</ul>
					</div> <!-- #end panel-body -->
				</div>
			</div>

			<!-- list widgets -->
			<div class="col-md-6 col-sm-12">
				<div class="panel panel-default mb20 list-widget">
					<ul class="list-unstyled clearfix">
						<li>
							<a href="<%= seller_equipment_index_path %>">
								<i class="fa fa-file-o"></i>
								<span class="text">My Equipments</span>
								<span class="badge badge-sm badge-primary right"><%= (@equipments.count > 9999) ? "9999+" : @equipments.count %></span>
							</a>
						</li>
						<li>
							<a href="<%= inbox_seller_messages_path %>">
								<i class="fa fa-comments-o"></i>
								<span class="text">Messages</span>
								<span class="badge badge-sm badge-info right"><%= (@received_messages.count > 9999) ? "9999+" : @received_messages.count %></span>
							</a>
						</li>
						<li>
							<a href="<%= seller_buying_proposals_path %>">
								<i class="fa fa-building-o"></i>
								<span class="text">My Proposals</span>
								<span class="badge badge-sm badge-success right"><%= (@proposals.count > 9999) ? "9999+" : @proposals.count %></span>
							</a>
						</li>
						<li>
							<i class="fa fa-bullhorn"></i>
							<span class="text"> Notifications</span>
							<span class="badge badge-sm badge-primary right">
								<% unread_notifications_count = current_user.try(:unread_notifications_count).to_i %>
								<%= (unread_notifications_count > 9999) ? "9999+" : unread_notifications_count %>
							</span>
						</li>
						<li>
							<a href="<%= seller_offers_path %>">
								<i class="fa fa-tag"></i>
								<span class="text">Offers</span>
								<span class="badge badge-sm badge-danger right"><%= (@offers.count > 9999) ? "9999+" : @offers.count %></span>
							</a>	
						</li>
						<li>
							<a href="<%= seller_questions_path %>">
								<i class="fa fa-question"></i>
								<span class="text">Questions</span>
								<span class="badge badge-sm badge-info circle right"><%= (@questions.count > 9999) ? "9999+" : @questions.count %></span>
							</a>	
						</li>
						<li>
							<a href="<%= seller_orders_path %>">
								<i class="fa fa-suitcase"></i>
								<span class="text">My Orders</span>
								<span class="badge badge-sm circle badge-danger right"><%= (@orders.count > 9999) ? "9999+" : @orders.count %></span>
							</a>
						</li>
					</ul>
				</div>
			</div>
			
			
		</div>
		<!-- #end row -->

</div>

