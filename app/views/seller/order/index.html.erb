  <!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>My Orders </h1>
    <ol class="breadcrumb">
      <li><a href="<%= seller_dashboard_path %>">Home</a></li>
      <li class="active">My Order</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content new-msg-content">
    <!-- /.row -->
    <div class="row">
      <div class="col-lg-12 msg-info-area">
        <div class="box box-info dsh-table-details">
          <div class="box-body">
          <% if @orders.present? %>
            <div class="table-responsive">
              <table class="table no-margin">
                <thead>
                  <tr>
                    <th>Order SN.</th>
                    <th>Equipment SN.</th>
                    <th>Equipment Name</th>
                    <th>Seller</th>
                    <th>Buyer</th>
                    <th>Price</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% @orders.each_with_index do |order,index| %>
                    <tr>
						
                      <td><%= order.id %></td>
                      
                      <td><%= order.equipment.identifier %></td>
                      
                      <td><%= order.equipment.name %></td>
                      
                      <td><%= order.equipment.owner_name + ', ' + order.equipment.country.name %></td>
                      
                      <td><%= order.name + ', ' + order.country.name %></td>
                      
                      <td><%= raw(order.equipment.currency) + order.price.to_s %></td>
                      
                      <td><%= order.status %></td>
                      
                      <td><%= link_to seller_order_path(order) do %>
                            <i class="fa fa-file-text-o"></i><span> Detail</span>
                          <% end %>
                      </td>
                      
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <!-- /.table-responsive -->
            <% else %>
              <p style="text-align:center;margin-top: 8px;font-size:16px;">No Orders Found</p>
            <% end %>
          </div>
          <!-- /.box-body -->
        <!-- /.box-footer -->
        </div>
      </div>
    </div>
    <%= paginate @orders, :theme => 'listing_page_theme' %>
  <!-- /.row -->
  </section>
  <!-- /.content -->
</div>
  <!-- /.content-wrapper -->

<!-- ./wrapper -->
