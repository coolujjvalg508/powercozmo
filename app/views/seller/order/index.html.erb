<div class="page page-ui-tables page-dashboard">
	<ol class="breadcrumb breadcrumb-small">
		<li><a href="<%= seller_dashboard_path %>">Home</a></li>
		<li class="active">My Orders</li>
	</ol>
	
	<div class="page-wrap">
		
		<div class="row">
			<!-- dashboard header -->
			<div class="col-md-12">
				<div class="dash-head clearfix mb20">
					<div class="left">
						<h4 class="mb5 text-light">My Orders</h4>
					</div>
				</div>
			</div>
		</div> <!-- #end row -->
		
		<!-- row -->
		<div class="row">
			<!-- Basic Table -->
			<div class="col-md-12">
				<div class="panel panel-lined panel-hovered mb20 table-responsive basic-table">
					
					<div class="panel-body">
						<% if @orders.present? %>
							<table class="table">
								<thead>
									<tr>
										<th>Order S.NO.</th>
										<th>Equipment S.NO.</th>
										<th>Equipment Name</th>
										<th>Seller</th>
										<th>Buyer</th>
										<th>Price</th>
										<th>Status</th>
										<th class="text-center">Action</th>
									</tr>
								</thead>
								
								<tbody>
									<% @orders.each_with_index do |order,index| %>
										<tr>
											<td><%= order.id %></td>
											<td><%= order.equipment.identifier %></td>
											<td><%= order.equipment.name %></td>
											<td><%= order.equipment.owner_name + ', ' + order.equipment.country.name %></td>
											<td><%= order.name + ', ' + order.country.name %></td>
											<td><%= raw(order.equipment.currency) + order.price.to_s %></td>
											<td><%= order.status %></td>
											<td class="text-center">
												<%= link_to '<i class="ion-eye"></i>View'.html_safe, seller_order_path(order), title: "View", class: "btn btn-info"%>
											</td>				
																					
										</tr>
									<% end %>
								</tbody>
							</table>
							<%= paginate @orders, :theme => 'listing_page_theme' %>
						 <% else %>
							<p class="no-result">No Orders Found</p>
						 <% end %>	
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
