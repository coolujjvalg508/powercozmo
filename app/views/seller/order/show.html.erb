<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>Order Details </h1>
    <ol class="breadcrumb">
      <li><%= link_to "Home", seller_dashboard_path %></li>
      <li class="active">Order Details</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content new-msg-content">
      <!-- /.row -->
      <div class="row">
        <div class="col-lg-12 msg-info-area">
			
			<% if @order.present? %>
			
			<!-- <%= link_to "<i class='fa fa-save'></i>".html_safe, seller_order_path(@order, format: :pdf) %> -->		 	
			
			
			<div class="new-msg-form-box">
				
				<div class="detail-list-row">
					<div class="detail-list-l text-bold">Status</div>
					<div class="detail-list-r"><%= @order.status %></div>
					<div class="clearfix"></div>
				</div>
				
				<% if current_user.id == @order.user_id && @order.status == 'Seller Confirmed' %>
				
					<%= form_for(@order, url: seller_orders_update_path(@order), html: { method: :put, :id => "update_status" }) do |f| %>
				
						<%= f.submit 'Accept', class: "btn btn-default custom-btn sent-mail-btn fnone" %>
						<%= f.submit 'Reject', class: "btn btn-default custom-btn sent-mail-btn fnone reject-btn" %>
					
					<% end %>
				
				<% end %>
				
			</div>
			
			
			<div class="new-msg-form-box">
				<div class="detail-list-row">
					<div class="detail-list-l text-bold">Contacts</div>
					<div class="clearfix"></div>
				</div>
				
				<% if current_user.id == @order.equipment.user_id %>
					<!-- If order page opened at seller end shown seller details -->
					<%= form_for(@order.seller, url: seller_orders_update_path(@order), html: { method: :put, :id => "update_profile" }) do |f| %>
					
						<%= f.fields_for :profile do |profile_form| %>
						
							<div class="detail-list-row">
								<div class="detail-list-l">Contact Name</div>
								<div class="detail-list-r">
									
									<%= profile_form.text_field :first_name, autocomplete: "off", class: 'form-control', style: '    float: left; width: 45%; margin-right: 10px;', id: 'firstname', placeholder: 'Enter First Name' %>
									
									<%= profile_form.text_field :last_name, autocomplete: "off", class: 'form-control', style: '    float: left; width: 45%;', id: 'lastname', placeholder: 'Enter Last Name' %>
									
									<% if @user %>
										<div class="clearfix"></div>
										<div style="float: left; width: 45%; margin-right: 10px;">
											<%= @user.errors[:first_name].first if @user.errors.any? %>
										</div>
										<div style="float: left; width: 45%;">
											<%= @user.errors[:last_name].first if @user.errors.any? %>
										</div>
									<% end %>
																	
								</div>
								<div class="clearfix"></div>
							</div>
							
							<div class="detail-list-row">
								<div class="detail-list-l">Company Name</div>
								<div class="detail-list-r">
																	
									<%= profile_form.text_field :company_name, autocomplete: "off", class: 'form-control', id: 'companyname', placeholder: 'Enter Company Name' %>
									
									<% if @user %>
										<div class="clearfix"></div>
										<div>
											<%= @user.errors[:company_name].first if @user.errors.any? %>
										</div>
									<% end %>
									
								</div>
								<div class="clearfix"></div>
							</div>
					
							<div class="form-group pull-left mrg-btm-zero">
								<%= f.submit "Update", class: "btn btn-default custom-btn" %>
							</div>	
						<% end %>
					<% end %>
								
				<% else %>
					
					<!-- If order page opened at buyer end shown buyer details -->			
					<%= form_for(@order.user, url: seller_orders_update_path(@order), html: { method: :put, :id => "update_profile" }) do |f| %>
						<%= f.fields_for :profile do |profile_form| %>
						
							<div class="detail-list-row">
								<div class="detail-list-l">Contact Name</div>
								<div class="detail-list-r">
									
									<%= profile_form.text_field :first_name, autocomplete: "off", class: 'form-control', style: '    float: left; width: 45%; margin-right: 10px;', id: 'firstname', placeholder: 'Enter First Name' %>
									
									<%= profile_form.text_field :last_name, autocomplete: "off", class: 'form-control', style: '    float: left; width: 45%;', id: 'lastname', placeholder: 'Enter Last Name' %>
									
									<% if @user %>
										<div class="clearfix"></div>
										<div style="float: left; width: 45%; margin-right: 10px;">
											<%= @user.errors[:first_name].first if @user.errors.any? %>
										</div>
										<div style="float: left; width: 45%;">
											<%= @user.errors[:last_name].first if @user.errors.any? %>
										</div>
									<% end %>
																	
								</div>
								<div class="clearfix"></div>
							</div>
							
							<div class="detail-list-row">
								<div class="detail-list-l">Company Name</div>
								<div class="detail-list-r">
																	
									<%= profile_form.text_field :company_name, autocomplete: "off", class: 'form-control', id: 'companyname', placeholder: 'Enter Company Name' %>
									
									<% if @user %>
										<div class="clearfix"></div>
										<div>
											<%= @user.errors[:company_name].first if @user.errors.any? %>
										</div>
									<% end %>
									
								</div>
								<div class="clearfix"></div>
							</div>
					
							<div class="form-group pull-left mrg-btm-zero">
								<%= f.submit "Update", class: "btn btn-default custom-btn" %>
							</div>	
						<% end %>
					<% end %>
				
				<% end %>	
				
			</div>
			
			
			
			<div class="new-msg-form-box">
				<div class="detail-list-row">
					<div class="detail-list-l text-bold">Equipment</div>
					<div class="clearfix"></div>
				</div>
				
				<div class="detail-list-row">
					<div class="detail-list-l">Equipment Name</div>
					<div class="detail-list-r"><%= @order.equipment.name %></div>
					<div class="clearfix"></div>
				</div>
				
				<div class="detail-list-row">
					<div class="detail-list-l">Equipment SN</div>
					<div class="detail-list-r"><%= @order.equipment.identifier %></div>
					<div class="clearfix"></div>
				</div>
				
				<div class="detail-list-row">
					<div class="detail-list-l">Equipment Condition</div>
					<div class="detail-list-r"><%= @order.equipment.condition %></div>
					<div class="clearfix"></div>
				</div>
				
				<div class="detail-list-row">
					<div class="detail-list-l">Equipment Link On Site</div>
					<div class="detail-list-r"><%= link_to equipment_details_url(@order.equipment.id), equipment_details_path(@order.equipment.id) %></div>
					<div class="clearfix"></div>
				</div>
				
				<div class="detail-list-row">
					<div class="detail-list-l">Description</div>
					<div class="detail-list-r"><%= @order.equipment.description %></div>
					<div class="clearfix"></div>
				</div>
				
			</div>
			
			
			<div class="new-msg-form-box">
				<div class="detail-list-row">
					<div class="detail-list-l text-bold">Price</div>
					<div class="clearfix"></div>
				</div>
				
				<div class="detail-list-row">
					<div class="detail-list-l">Amount Will Be Paid From Buyer</div>
					<div class="detail-list-r"><%= raw(@order.equipment.currency) + @order.price.to_s %></div>
					<div class="clearfix"></div>
				</div>
				
				<div class="detail-list-row">
					<div class="detail-list-l">Power Cozmo Commission</div>
					<div class="detail-list-r">
						<% commission = (@order.price * @order.commission) / 100 %>
						<%= raw(@order.equipment.currency) + commission.to_s %>
					</div>
					<div class="clearfix"></div>
				</div>
				
				<div class="detail-list-row">
					<div class="detail-list-l">Amount Will Be Paid To Seller</div>
					<div class="detail-list-r">
						<% seller_amount = @order.price - commission %>
						<%= raw(@order.equipment.currency) + seller_amount.to_s %>
					</div>
					<div class="clearfix"></div>
				</div>
				
			</div>
			
					
			
			  <% if @enquiry %>
				  <% @enquiry.responses.each_with_index do |enquiry_response,index| %>    
					  <div class="row">
						<div class="col-lg-12 msg-info-area">
						  <%= "<h3>Responses</h3>".html_safe if index==0%>          
						  <div class="new-msg-form-box">
						  
						   <div class="detail-list-row">
							  <div class="detail-list-l">From</div>
							  <div class="detail-list-r big-msg">
								<%= enquiry_response.user.profile.first_name + ' ' + enquiry_response.user.profile.last_name %>
							  </div>
							  <div class="clearfix"></div>
							</div>
						  
							<div class="detail-list-row">
							  <div class="detail-list-l">Message</div>
							  <div class="detail-list-r big-msg">
								<%= enquiry_response.message.to_s.html_safe %>
							  </div>
							  <div class="clearfix"></div>
							</div>
							<div class="detail-list-row">
							  <div class="detail-list-l">Date</div>
								<div class="detail-list-r"><%=format_time(enquiry_response.created_at)%><!-- 10/03/2016 --></div>
								<div class="clearfix"></div>
							</div>
						  </div>
						</div>
					  </div>
				  <% end %>
			  <% end %>
			  
			  
			  
				<div class="row">
					<div class="col-lg-12 msg-info-area">
					  <div>
						<div class="pull-left"><h3>Shipping Details</h3></div>
						<div class="pull-right" style="margin-top: 20px;"><%= link_to "<i class='fa fa-edit'></i>Update Shipping".html_safe, seller_update_shipping_path(@order) %></div>        
					  </div>
					  <div class="new-msg-form-box">
					  
					   <div class="detail-list-row">
						  <div class="detail-list-l">Number Of Packages</div>
						  <div class="detail-list-r big-msg"><%= @order.no_of_packages %></div>
						  <div class="clearfix"></div>
						</div>
					  
						<div class="detail-list-row">
						  <div class="detail-list-l">Shipping Method</div>
						  <div class="detail-list-r big-msg"><%= @order.shipping_method %></div>
						  <div class="clearfix"></div>
						</div>
												
					  </div>
					</div>
				</div>
			  
			  
				<div class="new-msg-form-box">
					<div class="detail-list-row">
						<div class="detail-list-l text-bold">Pickup Location</div>
						<div class="clearfix"></div>
					</div>
					
					<div class="detail-list-row">
						<div class="detail-list-l">Country</div>
						<div class="detail-list-r">
							<% if @order.pickup_country %>
								<%= @order.pickup_country.name %>
							<% end %>
							</div>
						<div class="clearfix"></div>
					</div>
					
					<div class="detail-list-row">
						<div class="detail-list-l">City</div>
						<div class="detail-list-r"><%= @order.pickup_city %></div>
						<div class="clearfix"></div>
					</div>
					
					<div class="detail-list-row">
						<div class="detail-list-l">Port</div>
						<div class="detail-list-r"><%= @order.pickup_port %></div>
						<div class="clearfix"></div>
					</div>
				</div>
				
				<div class="new-msg-form-box">
					<div class="detail-list-row">
						<div class="detail-list-l text-bold">Delivery Location</div>
						<div class="clearfix"></div>
					</div>
					
					<div class="detail-list-row">
						<div class="detail-list-l">Country</div>
						<div class="detail-list-r">
							<% if @order.delivery_country %>
								<%= @order.delivery_country.name %>
							<% end %>
						</div>
						<div class="clearfix"></div>
					</div>
					
					<div class="detail-list-row">
						<div class="detail-list-l">City</div>
						<div class="detail-list-r"><%= @order.delivery_city %></div>
						<div class="clearfix"></div>
					</div>
					
					<div class="detail-list-row">
						<div class="detail-list-l">Port</div>
						<div class="detail-list-r"><%= @order.delivery_port %></div>
						<div class="clearfix"></div>
					</div>
				</div>
			  
			  
			  <%= form_for(@order, url: seller_orders_update_path(@order), html: { method: :put, :id => "update_remark" }) do |f| %>
			  <div class="new-msg-form-box">
				  
					<div class="detail-list-row">
						<div class="detail-list-l text-bold">Terms</div>
						<div class="clearfix"></div>
					</div>
				  
					<div class="detail-list-row">
						<div class="detail-list">
								
							<% if current_user.id == @order.equipment.user_id %>	
											
								<%= f.text_area :seller_remark, autocomplete: "off", class: 'form-control', id: 'seller_remark', placeholder: 'Enter Remarks' %>
															
							<% else %>
							
								<%= f.text_area :buyer_remark, autocomplete: "off", class: 'form-control', id: 'buyer_remark', placeholder: 'Enter Remarks' %>
								
							<% end %>	
							
						</div>
						<div class="clearfix"></div>
					</div>
			
					<div class="form-group pull-left mrg-btm-zero">
						<%= f.submit "Submit", class: "btn btn-default custom-btn" %>
					</div>	
				</div>	
				<% end %>
			  		
           <% else %>
				<div class="new-msg-form-box">
					<p style="text-align:center;margin-top: 8px;font-size:16px;">No order found.</p>
				</div>	
          <% end %>
          
        </div>
      </div>
    <!-- /.row -->
   
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->
