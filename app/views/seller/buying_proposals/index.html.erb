<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>My Proposals </h1>
    <ol class="breadcrumb">
      <li><a href="<%= seller_dashboard_path %>">Home</a></li>
      <li class="active">My Proposals</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content new-msg-content">
      <!-- /.row -->
      <div class="row">
        <div class="col-lg-12 msg-info-area">
          <div class="box box-info dsh-table-details">
          <!-- /.box-header -->
          <div class="box-body">
            <% if @proposals.present? %>
              <div class="table-responsive">
                <table class="table no-margin">
                  <thead>
                    <tr>
                      <th width="17%">Buying request SNO</th>
                      <th width="20%" class="txtlft">Buying request name</th>
                      <th width="7%" style="text-align:center;">Price</th>
                      <th width="7%" style="text-align:center;">Currency </th>
                      <th width="10%" style="text-align:center;">Delivery time</th>
                      <th>Proposal</th>
                      <th>Sent At</th>
                      <th width="7%" style="text-align:center;">Attachment</th>
                      <th width="7%" style="text-align:center;">&nbsp;</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @proposals.each do |proposal| %>
                      <tr>
                        <td><%=proposal.try(:buying_request).try(:identifier) %></th>
                        <td class="txtlft"><%=proposal.try(:buying_request).try(:name)%></td>
                        <td style="text-align:center;"><%=number_to_currency(proposal.price, unit: raw(proposal.currency.symbol)) %></td>
                        <td style="text-align:center;"><%= proposal.currency.name %></td>
                        <td style="text-align:center;"><%= proposal.delivery_time.to_s %></td>
                        <td><%= truncate(proposal.proposal, length: 35) %></td>
                        <td><%= proposal.created_at%></td>
                        <td align="center">
                          <% if proposal.attachment.present? %>
                            <% if proposal.attachment.file.extension.downcase == 'pdf' %>
                              <%= link_to proposal.attachment.url, target: "blank" do %>
                                <i class="fa fa-paperclip"></i>
                              <% end %>
                            <% else %>
                              <%= image_tag proposal.attachment.url, height: 50, width: 50 %>
                            <% end %>
                          <% end %>
                        </td>
                        <td><%= link_to 'View Details', seller_buying_proposal_path(proposal)%></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            <% else %>
              <p style="text-align: center;margin-top: 10px;">No proposal found.</p>
            <% end %>
            <!-- /.table-responsive -->
          </div>
          <!-- /.box-body -->
          <!-- /.box-footer -->
        </div>
        </div>
      </div>      
    <!-- /.row -->
      <%= paginate @proposals, :theme => 'listing_page_theme' if @proposals.present? %>
  </section>
  <!-- /.content -->
</div>