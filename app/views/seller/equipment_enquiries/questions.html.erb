<div class="page page-ui-tables page-dashboard">
	<ol class="breadcrumb breadcrumb-small">
		<li><a href="<%= seller_dashboard_path %>">Home</a></li>
		<li class="active">Equipment Question List</li>
	</ol>
	
	<div class="page-wrap">
		
		<div class="row">
			<!-- dashboard header -->
			<div class="col-md-12">
				<div class="dash-head clearfix mb20">
					<div class="left">
						<h4 class="mb5 text-light">Equipment Question List</h4>
					</div>
				</div>
			</div>
		</div> <!-- #end row -->
		
		<!-- row -->
		<div class="row">
			<!-- Basic Table -->
			<div class="col-md-12">
				<div class="panel panel-lined panel-hovered mb20 table-responsive basic-table">
					
					<div class="panel-body">
						<% if @questions.present? %>
							<table class="table">
								<thead>
									<tr>
										<th class="text-center">S.NO.</th>
										<th>Equipment S.NO.</th>
										<th>Equipment Name</th>
										<th>Seller</th>
										<th>Buyer</th>
										<th>Price</th>
										<th class="text-center">Action</th>
									</tr>
								</thead>
								
								<tbody>
									<% @questions.each_with_index do |question,index| %>
										<tr style="<%='font-weight: bold;' unless question.is_read? %>">
											<td class="text-center"><%=index+1%></td>
											<td><%= question.equipment.identifier %></td>
											<td><%= question.equipment.name %></td>
											<td><%=question.try(:equipment).try(:name)%>, <%=question.try(:equipment).try(:country).try(:name)%></td>
											<td><%=question.try(:name)%>, <%=question.try(:country).try(:name)%></td>
											<td><%= raw(question.try(:equipment).try(:currency)) %><%=question.try(:equipment).try(:price)%></td>
											<td class="text-center">
												
												<%=link_to '<i class="ion-eye"></i>'.html_safe,seller_question_path(id: question.id), title: 'View'%>
												<%=link_to '<i class="ion-ios-trash"></i>'.html_safe,seller_question_path(id: question.id),method: 'delete',data: {confirm: 'Are you sure to delete the question?'}, title: 'Delete'%>
												
											</td>											
										</tr>
									<% end %>
								</tbody>
							</table>
							<%= paginate @questions, :theme => 'listing_page_theme' %>
						 <% else %>
							<p class="no-result">No Questions Received Yet</p>
						 <% end %>	
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
