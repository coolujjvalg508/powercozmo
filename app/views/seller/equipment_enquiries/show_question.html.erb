<% if @question.equipment.availble_for < Date.today %>
	<% unless @question.response.present? %>
		<div class="col-sm-12 col-md-12 alert alert-danger">
			<div>You can't respond to this enquiry as this equipment is expired.</div>
		</div>
	<% end %>
<% end %>

<div class="page page-forms-elements page-dashboard">
	<ol class="breadcrumb breadcrumb-small">
		<li><a href="<%= seller_dashboard_path %>">Home</a></li>
		<li class="active">Equipment Question List Detail</li>
	</ol>
	
	<div class="page-wrap">
		
		<div class="row">
			<!-- dashboard header -->
			<div class="col-md-12">
				<div class="dash-head clearfix mb20">
					<div class="left">
						<h4 class="mb5 text-light">Equipment Question List Detail</h4>
					</div>
				</div>
			</div>
		</div> <!-- #end row -->
		
		<!-- row -->
		<div class="row">
			<section class="content myprofile-content">
				
				<div class="col-sm-12 col-md-12">	
					<div class="panel panel-default panel-hovered panel-stacked mb30">
						<div class="panel-body">				
														
							<div class="form-group">
								<label class="col-md-4 control-label text-bold">Name</label>
								<div class="col-md-8"><%=@question.name%></div>
							</div>
							
							<div class="clearfix"></div>
							
							<div class="form-group mt20">
								<label class="col-md-4 control-label text-bold">Location</label>
								<div class="col-md-8"><%=@question.try(:country).try(:name)%></div>
							</div>	
							
							
							<div class="clearfix"></div>
							
							<div class="form-group mt20">
								<label class="col-md-4 control-label text-bold">Date</label>
								<div class="col-md-8"><%=format_time(@question.created_at)%><!-- 10/03/2016 --></div>
							</div>
							
							<div class="clearfix"></div>
							
							<div class="form-group mt20">
								<label class="col-md-4 control-label text-bold">Message</label>
								<div class="col-md-8"><%=@question.message%></div>
							</div>
														
						</div>	
					</div>	
				</div>
				
				<%= render partial: "enquiry_responses", locals: {enquiry: @question} %>			

			</section>
		</div>
	</div>
</div>
