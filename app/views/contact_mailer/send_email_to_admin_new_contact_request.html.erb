<% if @system_email.present? && @system_email.try(:content).present? %>
	<%= @system_email.content.to_s.gsub("::ADMIN_USER_NAME::",@admin_user.name.to_s).gsub("::CONTACT_NAME::",@contact.try(:name).to_s).gsub("::CONTACT_EMAIL::",@contact.email.to_s).gsub("::CONTACT_SUBJECT::",@contact.subject.to_s).gsub("::CONTACT_PHONE::",@contact.phone.to_s).gsub("::CONTACT_REPORT_MESSAGE::",@contact.message.to_s).html_safe %>
<% else %>
	<p>Hello <strong><%= @admin_user.name.to_s %></strong>,</p>

	<p>You have received a contact request from <strong><%= @contact.try(:name).to_s %></strong>. Please find below details.</p>
	<p>Subject: <strong><%= @contact.subject.to_s %></strong></p>
	<p>Name: <strong><%= @contact.try(:name).to_s %></strong></p>
	<p>Email: <strong><%= @contact.email.to_s %></strong></p>
	<p>phone: <strong><%= @contact.phone.to_s %></strong></p>
	<p>Message: <strong><%= @contact.message.to_s.html_safe %></strong></p>

	<p>&nbsp;</p>

	<p>Best Regards</p>

	<p>Power Cozmo Team</p>
<% end %>
