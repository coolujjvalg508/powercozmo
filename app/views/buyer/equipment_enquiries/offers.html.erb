<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>Equipment Offers List </h1>
    <ol class="breadcrumb">
      <li><%= link_to "Home", buyer_dashboard_path %></li>
      <li class="active">Equipment Offers List</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content new-msg-content">
      <!-- /.row -->
      <div class="row">
        <div class="col-lg-12 msg-info-area">
          <div class="box box-info dsh-table-details">
          <!-- /.box-header -->
          <div class="box-body">
            <% if @offers.present? %>
              <div class="table-responsive">
                <table class="table no-margin">
                  <thead>
                    <tr>
                      <th width="5%">S. No</th>
                      <th width="30%" class="txtlft">Equipment Name</th>
                      <th width="15%">Owner Name</th>
                      <th width="15%" style="text-align:center;">Offered Price</th>
                      <th width="14%" style="text-align:center;">Approved Deal</th>
                      <th width="10%" style="text-align:center;">Country</th>
                      <th style="text-align:center;">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @offers.each_with_index do |offer, index| %>
                      <tr style="<%='font-weight: bold;' unless offer.is_read? %>">
                        <th><%= index+1 %></th>
                        <td class="txtlft"><%= offer.equipment.name %></td>
                        <td><%= offer.equipment.owner_name %></td>
                        <td align="center"><%= offer.bidding_price || offer.equipment.price %></td>
                        <td align="center"><%= offer.replied_as == "Requested" ? "Requested": offer.replied_as == "Accepted" ? "Yes" : "No"%></td>
                        <td align="center"><%= offer.try(:country).try(:name) %></td>
                        <td align="center" class="table-links">
                          <%= link_to buyer_offer_path(offer) do %>
                            <i class="fa fa-file-text-o"></i><span> Detail</span>
                          <% end %>
                          <%= link_to buyer_offer_path(offer), method: :delete,data: { confirm: 'Are you sure?' } do %>
                            <i class="fa fa-remove"></i><span> Delete</span>
                          <% end %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
              <!-- /.table-responsive -->
            <% else %>
              <p style="text-align:center;margin-top: 8px;font-size:16px;">No Offers Yet</p>
            <% end %>
          </div>
          <!-- /.box-body -->

          <!-- /.box-footer -->
        </div>
        </div>
      </div>
      <%= paginate @offers, :theme => 'listing_page_theme' %>
    <!-- /.row -->
      <%= paginate @offers, :theme => 'listing_page_theme' if @offers.present? %>
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->
