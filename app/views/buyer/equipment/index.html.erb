  <!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>My Listed Equipments </h1>
    <ol class="breadcrumb">
      <li><a href="<%= buyer_dashboard_path %>">Home</a></li>
      <li class="active">My Listed Equipments</li>
    </ol>
  </section>

  <!-- Main content -->
  <section class="content new-msg-content">
    <!-- /.row -->
    <div class="row">
      <div class="col-lg-12 msg-info-area">
        <div class="box box-info dsh-table-details">
          <div class="box-body">
          <% if @equipments.present? %>
            <div class="table-responsive">
              <table class="table no-margin">
                <thead>
                  <tr>
                    <th width="12%">S.No.</th>
                    <th width="20%">Name</th>
                    <th width="30%">Description</th>
                    <th width="10%" style="text-align:center;">Image</th>
                    <th width="10%">Valid Till</th>
                    <th width="10%">Status</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% @equipments.each_with_index do |equipment,index| %>
                    <tr>
                      <td><%= equipment.identifier %></td>
                      <td><%= equipment.name %></td>
                      <td><%=truncate(equipment.description, :length => 50) %></td>
                      <td align="center">
                        <% if equipment.images.present? %>
                          <%= image_tag(equipment.images.first.try(:image), width: '32', height: '32', alt: '') %>
                        <% else %>
                          <i class="fa fa-file-image-o"></i>
                        <% end %>
                      </td>
                      <td><%= equipment.availble_for.strftime("%d-%b-%Y %H:%M") if equipment.availble_for.present? %></td>
                      <td><span class="label label-<%= ['closed','sold','inactive'].include?(equipment.status.to_s) ? 'deactive' : 'active' %>"><%= equipment.status.humanize %></span></td>
                      <td>
                        <%= link_to '<i class="fa fa-pencil-square-o"></i>'.html_safe, edit_buyer_equipment_path(equipment) %>
                        <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, buyer_equipment_path(equipment),method: :delete,data: { confirm: 'Are you sure?' } %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <!-- /.table-responsive -->
            <% else %>
              <p style="text-align:center;margin-top: 8px;font-size:16px;">No Equipments Found</p>
            <% end %>
          </div>
          <!-- /.box-body -->
        <!-- /.box-footer -->
        </div>
      </div>
    </div>
    <%= paginate @equipments, :theme => 'listing_page_theme' %>
  <!-- /.row -->
  </section>
  <!-- /.content -->
</div>
  <!-- /.content-wrapper -->

<!-- ./wrapper -->
